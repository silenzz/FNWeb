@{
}
<link rel="stylesheet" href="~/css/Shop/Index.css" asp-append-version="true" />
<p>@ViewData["p1"]<p>
<p>@ViewData["p2"]<p>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-body">
                        <h2 class="text-center mb-4">Log In</h2>
                        <form action="/shop/edit" method="post" enctype="multipart/form-data">
                                        @if (!string.IsNullOrEmpty(ViewData["check"]?.ToString()))
                                        {
                                <div class="d-flex justify-content-center align-items-center" style="height: 10vh;">
                                    <div class="alert alert-success" role="alert" style="padding: 10px; margin: 20px;">
                                                    @ViewData["check"]
                                    </div>
                                </div>

                                        }
                            <div class="form-group">
                                <label for="Name">Name:</label>
                                <input type="text" class="form-control" id="name" name="name" value="@ViewData["Name"]" required>
                            </div>
                                            
                            <div class="form-group">
                                <label for="Price">Price:</label>
                                <input type="number" class="form-control" id="price" name="price" value="@ViewData["Price"]" required>
                            </div>
                            <br />
                            <div class="form-group">
                                <label for="image">Change image:</label>
                                <input onchange='readURL(this);' type="file" name="image" id="image" accept="image/jpeg">
                            </div>
                            <img src="@ViewData["img"]" style="width:auto;height:200px" id="blah" />
                            <script>
                                function readURL(input) {
                                    if (input.files && input.files[0]) {
                                        var reader = new FileReader();

                                        reader.onload = function (e) {
                                            $('#blah').attr('src', e.target.result).width(auto).height(200);
                                        };

                                        reader.readAsDataURL(input.files[0]);
                                    }
                                }
                               
                            </script>
                            <br />
                            <div class="form-group">
                                <label for="quantity">Quanity:</label>
                                <input type="number" class="form-control" id="quantity" name="quantity" value=@ViewData["Quantity"] required>
                            </div>
                            <div class="form-group">
                                <label for="type">Type:</label>
                                <input type="text" class="form-control" id="type" name="type" value=@ViewData["Type"] required>
                            </div>
                            <div class="form-group">
                                <label for="description">Description:</label>
                                <input type="text" class="form-control" id="description" name="description" value="@ViewData["Description"]" required>
                            </div>
                            @Html.Raw(ViewData["ID"])
                            <button type="submit" class="btn btn-primary btn-block mt-4">Edit</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
