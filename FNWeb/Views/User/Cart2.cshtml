<link rel="stylesheet" href="~/css/User/Cart2.css" asp-append-version="true" />
<form method="post" action="/user/buy" class="form-cart">

    <div class="form-group">
        <label for="address">Address:</label>
        <input type="text" class="form-control" id="address" name="address" required>
    </div>
    <div class="form-group">
        <label for="phone">Phone:</label>
        <input type="text" class="form-control" id="phone" name="phone" required>
    </div>
 
<table class="table table-striped">
    <thead>
        <tr>
            <th>Item</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
       
        @Html.Raw(ViewData["content"])
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4">Total:</td>
            <td class="money">@ViewData["tt"]</td>
        </tr>
    </tfoot>
</table>
<script>
    let moneys = document.querySelectorAll('.money');
    moneys.forEach(function (money) {
        let value = parseFloat(money.textContent);
        let formattedMoney = value.toLocaleString('vi-VN') + "đ";
        money.textContent = formattedMoney;
    });

</script>
    <input type="hidden" name="total" value="@ViewData["tt"]">
    <div class="button-container">
        <div class="form-group text-left">
            <button type="submit" class="btn float-left btnsubmit">Order</button>
        </div>
        <div class="form-group text-right">
            <button type="reset" class="btn float-right btnreset">Clear</button>
        </div>
        
    </div>
</form>
