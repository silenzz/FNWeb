@{
}
<link rel="stylesheet" href="~/css/User/forgot.css" asp-append-version="true" />
<p>@ViewData["p1"]<p>
<p>@ViewData["p2"]<p>
    <div class="container_login">
        <div class="row justify-content-center">
   
                <div class="card mt-5">
                    <div class="card-body">
                        <h2 class="text-center mb-4">Forgot password</h2>
                        <form action="/user/forgot1" method="post">
                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input type="email" class="form-control" id="email" name="email" value=@ViewData["email"] required>
                            </div>
                            <div class="form-group">
                                <label for="OTP">OTP:</label>
                                <input type="number" class="form-control" id="otp" name="otp" required>
                            </div>
                        <div class="form-group">
                                <center><button type="submit" class="btn btn-primary btn-block mt-4">Validate</button></center>
                        </div>
                        <div class="create margin">
                            <a href="/user" class="create_acc">
                                Login <u>Click here</u> <i class="fa fa-long-arrow-right"></i>
                            </a>
                        </div>
                                    @if (!string.IsNullOrEmpty(ViewData["check"]?.ToString()))
                                        {
                                          
                                        <div class="d-flex justify-content-center align-items-center" style="height: 10vh;">
                                    <div class="alert alert-danger" role="alert" style="padding: 10px; margin: 20px;">
                                                    @ViewData["check"]
                                    </div>
                                </div>

                                        }

                        </form>
                    </div>
                </div>
    
        </div>
    </div>
